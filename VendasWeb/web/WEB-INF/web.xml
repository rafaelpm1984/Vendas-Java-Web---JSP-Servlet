<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ProdutoController</servlet-name>
        <servlet-class>Controller.ProdutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>Controller.ClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendaController</servlet-name>
        <servlet-class>Controller.VendaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdutoController</servlet-name>
        <url-pattern>/ProdutoController</url-pattern>
        <url-pattern>/produtoVisualizar</url-pattern>
        <url-pattern>/produtoEditar</url-pattern>
        <url-pattern>/produtoCadastrar</url-pattern>
        <url-pattern>/produtoAlterar</url-pattern>
        <url-pattern>/produtoExcluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/ClienteController</url-pattern>
        <url-pattern>/clienteVisualizar</url-pattern>
        <url-pattern>/clienteEditar</url-pattern>
        <url-pattern>/clienteCadastrar</url-pattern>
        <url-pattern>/clienteAlterar</url-pattern>
        <url-pattern>/clienteExcluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendaController</servlet-name>
        <url-pattern>/VendaController</url-pattern>
        <url-pattern>/vendaBuscar</url-pattern>
        <url-pattern>/vendaCadastrar</url-pattern>
        
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
